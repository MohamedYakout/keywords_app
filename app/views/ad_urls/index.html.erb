<p id="notice"><%= notice %></p>

<h1>Listing Ad Urls</h1>

<%= search_form_for @q do |f| %>

  # Search if the name field contains...
  <%= f.label :link_cont %>
  <%= f.search_field :link_cont %>
  <%= f.label :is_ad_eq %>
  <%= f.select :is_ad_eq, [['Yes', 1], ['No', 0]], {include_blank: 'All'}, {class: 'selectpicker chosen-select'} %>
  <%= f.label :position_eq %>
  <%= f.select :position_eq, [['Top', 'top'], ['Right', 'right'], ['Center', 'center']], {include_blank: 'All'}, {class: 'selectpicker chosen-select'} %>

  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th>Position</th>
      <th>Is ad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ad_urls.each do |ad_url| %>
      <tr>
        <td><%= truncate(ad_url.link, :length => 50) %></td>
        <td><%= ad_url.position %></td>
        <td><%= ad_url.is_ad %></td>
        <td><%= link_to 'Show', ad_url %></td>
        <td><%= link_to 'Edit', edit_ad_url_path(ad_url) %></td>
        <td><%= link_to 'Destroy', ad_url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

